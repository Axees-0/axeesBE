# Frontend Bug Hunter Environment Configuration
# Active configuration for current environment

# Environment Selection (development, staging, production)
ENVIRONMENT=development

# Frontend Application URL - Default to Expo development server
FRONTEND_URL=http://localhost:19006

# Staging Environment Configuration
STAGING_FRONTEND_URL=https://staging.axees.com
STAGING_BACKEND_API_URL=https://staging-api.axees.com

# Production Environment Configuration
PRODUCTION_FRONTEND_URL=https://axees.com
PRODUCTION_BACKEND_API_URL=https://api.axees.com

# Test Configuration
QUICK_TEST_TIMEOUT=300
STANDARD_TEST_TIMEOUT=900
COMPREHENSIVE_TEST_TIMEOUT=1800

# Browser Configuration
HEADLESS=true
BROWSER_WIDTH=1920
BROWSER_HEIGHT=1080

# Mobile Testing Configuration
MOBILE_WIDTH=375
MOBILE_HEIGHT=667

# Performance Thresholds
PAGE_LOAD_TIMEOUT=5000
NETWORK_TIMEOUT=30000

# Debug Configuration
DEBUG_MODE=false
SCREENSHOT_ON_FAILURE=true
VERBOSE_LOGGING=false

# CI/CD Configuration
CI_MODE=false
PARALLEL_TESTS=2

# Authentication Test Data - CRITICAL: MUST USE REAL CREDENTIALS
# WARNING: Framework will fail if these remain as defaults
# These MUST be real, working credentials for your actual backend
TEST_EMAIL=test@axees.com
TEST_PASSWORD=test123
TEST_PHONE=+1234567890

# Authentication Validation
# Set to true only after configuring real credentials above
CREDENTIALS_CONFIGURED=true

# Backend API Configuration (required for authentication validation)
# Replace with your actual backend authentication endpoints
BACKEND_API_URL=http://localhost:3001
AUTH_LOGIN_ENDPOINT=/api/auth/login
AUTH_HEALTH_ENDPOINT=/api/health

# Staging-specific Test Credentials (if different from development)
# STAGING_TEST_EMAIL=staging_test@axees.com
# STAGING_TEST_PASSWORD=staging_test_password
# STAGING_TEST_PHONE=+1234567890

# Production-specific Test Credentials (use with extreme caution)
# PRODUCTION_TEST_EMAIL=prod_test@axees.com
# PRODUCTION_TEST_PASSWORD=prod_test_password
# PRODUCTION_TEST_PHONE=+0987654321