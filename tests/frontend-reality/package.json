{
  "name": "frontend-bug-hunter",
  "version": "1.0.0",
  "description": "Frontend bug hunting tools that catch real user experience issues",
  "scripts": {
    "hunt": "./run-frontend-bug-hunt.sh",
    "hunt:quick": "./run-frontend-bug-hunt.sh --quick",
    "hunt:comprehensive": "./run-frontend-bug-hunt.sh --comprehensive",
    "hunt:auth": "./run-frontend-bug-hunt.sh --test auth",
    "hunt:chat": "./run-frontend-bug-hunt.sh --test chat",
    "hunt:forms": "./run-frontend-bug-hunt.sh --test forms",
    "hunt:mobile": "./run-frontend-bug-hunt.sh --test mobile",
    "hunt:performance": "./run-frontend-bug-hunt.sh --test performance",
    "hunt:headless": "./run-frontend-bug-hunt.sh --headless",
    "test:auth": "node specific-bug-tests/authentication-flow-bugs.js",
