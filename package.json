{
  "name": "axeesBE",
  "version": "1.0.0",
  "main": "main.js",
  "packageManager": "yarn@4.4.1",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "@faker-js/faker": "^9.5.0",
    "apify-client": "^2.12.4",
    "async": "^3.2.6",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "firebase-admin": "^13.1.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.6",
    "mime-types": "^3.0.1",
    "moment": "^2.30.1",
    "mongoose": "^8.10.1",
    "multer": "^1.4.5-lts.1",
    "ngrok": "^5.0.0-beta.2",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.0",
    "openai": "^4.98.0",
    "qrcode": "^1.5.3",
    "redis": "^4.7.0",
    "stripe": "^17.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.4.4",
    "uuid": "^11.1.0"
  },
  "scripts": {
    "start": "node main.js",
    "dev": "nodemon main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:security": "jest tests/integration/security.test.js",
    "test:performance": "jest tests/integration/performance-baseline.test.js",
    "test:error-handling": "jest tests/integration/error-handling.test.js",
    "test:database": "jest tests/integration/database-integration.test.js",
    "test:auth": "jest tests/integration/auth.test.js tests/integration/auth-profile.test.js",
    "test:offers": "jest tests/integration/offer-management.test.js",
    "test:payments": "jest tests/integration/payment-management.test.js",
    "test:deals": "jest tests/integration/deal-execution.test.js",
    "test:chat": "jest tests/integration/chat-messaging.test.js",
    "test:users": "jest tests/integration/user-management.test.js",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:smoke:staging": "jest tests/smoke/staging.test.js",
    "test:smoke:production": "jest tests/smoke/production.test.js",
    "test:e2e": "jest tests/e2e",
    "test:e2e:staging": "ENVIRONMENT=staging jest tests/e2e",
    "test:e2e:production": "ENVIRONMENT=production jest tests/e2e",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:report": "eslint . --ext .js --format json -o eslint-report.json",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "complexity:check": "plato -r -d complexity-report -t 'Code Complexity Report' controllers models routes utils",
    "duplication:check": "jscpd . --min-lines 5 --min-tokens 70",
    "monitor:performance": "node scripts/performance-monitor.js",
    "build": "node scripts/build.js",
    "predeploy": "npm run test:ci && npm run build",
    "deploy:staging": "npm run predeploy && eb deploy axees-api-staging-env",
    "deploy:production": "npm run predeploy && eb deploy axees-api-env"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-async-to-generator": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@types/async": "^3",
    "@types/bcrypt": "^5",
    "@types/cors": "^2",
    "@types/express": "^4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9",
    "@types/mime-types": "^3",
    "@types/multer": "^1",
    "@types/node-cron": "^3",
    "@types/nodemailer": "^6",
    "@types/swagger-jsdoc": "^6",
    "babel-jest": "^29.7.0",
    "core-js": "^3.43.0",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.1"
  }
}
